extends: default

rules:
  indentation:
    spaces: 2
    indent-sequences: false
    check-multi-line-strings: false

  document-start:
    present: false

  colons:
    max-spaces-before: 0
    max-spaces-after: 1

  line-length:
    max: 120
    allow-non-breakable-words: true

  empty-values:
    forbid-in-block-mappings: true

  trailing-spaces:
    level: error

  new-line-at-end-of-file:
    present: true
