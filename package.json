{
  "name": "pipeline-ci-cd-bolsa-de-valores",
  "version": "1.0.0",
  "description": "Uma API simples e automatizada que envia cotações de ações diretamente para um canal do Discord. Ideal para quem deseja acompanhar o mercado financeiro de forma prática e integrada.",
  "main": "index.js",
  "scripts": {
    "dev": "node src/bot/index.js",
    "register:commands": "node scripts/register-commands.js",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "eslint . --ext .js",
    "lint": "npm run lint:prettier:check && npm run lint:eslint:check",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "build": "echo \"No build step defined\"",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.0",
    "husky": "^9.1.4",
    "jest": "29.7.0",
    "prettier": "3.3.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "brapi": "^1.0.1",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3"
  }
}
